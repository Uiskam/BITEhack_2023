#:include gui/nav_bar.kv

<InputFilesScreen>
    MDBoxLayout:
        padding: "10dp"
        orientation: 'vertical'
        MDLabel:
    #                size_hint_x: 0.9
            text: "Welcome to Flashcard generator"
            font_style: "H4"
            halign: 'center'
            size_hint_y: 0.2
        PathChooser:
            id: video_chooser
            file_type: "video"

        MDSeparator:
            orientation:'horizontal'
            height: "1dp"
        PathChooser:
            id: subtitles_chooser
            file_type: "subtitles"

        MDBoxLayout:
            size_hint_y: 0.2
            orientation: 'horizontal'
            LanguagesChooser:
                id: subtitles_language_chooser
                file_type: 'Subtitles'
            MDSeparator:
                orientation:'vertical'
                height: "10dp"
            LanguagesChooser:
                id: translation_language_chooser
                file_type: 'Translation'

        NavBar:
            size_hint_y: 0.2
            parent: root
            next: 'flashcard_suggestions'

