        orientation: 'vertical'
        size_hint: (0.5, 0.6)
        pos_hint: ({"center_x":0.5, "center_y":0.5})

        MDBoxLayout:
#            size_hint_y: 0.8
            adaptive_height: False
            id: main_box
            orientation: 'vertical'

        MDBoxLayout:
            padding: dp(20), dp(20)
            adaptive_height: True
            orientation: 'horizontal'
            MDLabel:
#                size_hint_x: 0.9
                text: ""
                font_style: "H5"
            MDRaisedButton:
#                size_hint_x: 0.1
                font_style: "Button"
                text: "next"
                id: list_edit_next
                on_release: print([item.ids.text_field.text for item in root.items])




<FlashcardViewClass>
    orientation: 'horizontal'
    size_hint_y: 0.1
