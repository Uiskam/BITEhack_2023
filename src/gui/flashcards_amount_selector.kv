
<FlashcardAmountSelector>
    padding: ("10dp", "10dp")
    MDBoxLayout:
        orientation: 'vertical'
        size_hint: (0.5, 0.6)
        pos_hint: ({"center_x":0.5, "center_y":0.5})

        MDBoxLayout:
#            size_hint_y: 0.8
            adaptive_height: False
            id: main_box
            orientation: 'vertical'

    NavBar:
        padding: ("10dp", "10dp")
        size_hint_y: 0.1
        parent: root
        prev: 'file_chooser'
        next_callback: app.go_suggestions_from_amounts
#        next: 'flashcard_suggestions'




<FlashcardViewClass>
    orientation: 'horizontal'
    size_hint_y: 0.1
    Label:
        text: root.title
        bold: True
    MDSeparator:
        orientation:'vertical'
        height: "10dp"
    MDTextField:
        id:text_field
        text: "0"
        halign: "center"
        pos_hint: {"center_y": 0.5}
